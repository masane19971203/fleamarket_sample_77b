= render 'templates/search-header'

.user-menu
  .user-menu__level
    %span 
      = link_to 'フリマ', root_path 
    %span 
      ＞ 
    - case @code
    - when '101'
      %span マイページ
    - else 
      = link_to 'マイページ', user_menu_path(id: "101",  name: "マイページ")
      %span 
        = " ＞ #{@name}"

  .user-menu__main

    -# ユーザーメニューのサイドバー
    = render 'templates/usermenu-sidebar'

    -# ユーザーメニューのコンテンツ部分
    .user-menu__main__contents

      //マイページ
      - if(@code == '101') 
        .user-menu__main__contents__mypage
          .user-menu__main__contents__mypage__user
            = image_tag "user_menu/user_background.jpg", class:"user-menu__main__contents__mypage__user__image"
            .user-menu__main__contents__mypage__user__info
              出品者
              .user-menu__main__contents__mypage__user__info__data
                評価：
                出品数：

          .user-menu__main__contents__mypage--tab 
            .user-menu__main__contents__mypage--tab__li.selected
              お知らせ
            .user-menu__main__contents__mypage--tab__li
              やることリスト
          .user-menu__main__contents__mypage__messages
            -# 後々メッセージ数に応じたコンテンツを表示
            = render 'message', code:301 

      //お知らせ
      - if(@code == '102')
        .user-menu__main__contents__notice
          .user-menu__main__contents__notice--tab 
            .user-menu__main__contents__notice--tab__li.selected
              お知らせ
            .user-menu__main__contents__notice--tab__li
              = link_to 'やることリスト', user_menu_path(id: "103", name: "やることリスト"), class: "user-menu__main__contents__notice--tab__li--link"
          .user-menu__main__contents__notice__messages
            -# 後々メッセージ数に応じたコンテンツを表示
            = render 'message', code:301 

      //やることリスト
      - if(@code == '103')      
        .user-menu__main__contents__todolist
          .user-menu__main__contents__todolist--tab 
            .user-menu__main__contents__todolist--tab__li
              = link_to 'お知らせ', user_menu_path(id: "102", name: "お知らせ"), class: "user-menu__main__contents__notice--tab__li--link"
            .user-menu__main__contents__todolist--tab__li.selected
              やることリスト
          .user-menu__main__contents__todolist__messages
            -# 後々メッセージ数に応じたコンテンツを表示
            = render 'message', code:301 

      //いいね！一覧
      - if(@code == '104')       
        .user-menu__main__contents__favorite
          .user-menu__main__contents__favorite__title
            いいね！一覧
          .user-menu__main__contents__favorite__li
            = render 'message', code:301 

      //出品ページは直接ページへ遷移するため記述なし

      //下書き一覧
      - if(@code == '106')       
        .user-menu__main__contents__draft
          .user-menu__main__contents__draft__title
            下書き一覧
          .user-menu__main__contents__draft_li
            = render 'message', code:301  

      //出品した商品-出品中
      - if(@code == '107')       
        .user-menu__main__contents__exhibition
          .user-menu__main__contents__exhibition__title
            出品した商品
          .user-menu__main__contents__exhibition--tab 
            .user-menu__main__contents__exhibition--tab__li.selected
              出品中
            .user-menu__main__contents__exhibition--tab__li
              = link_to '取引中', user_menu_path(id: "108", name: "出品した商品-取引中"), class: "user-menu__main__contents__exhibition--tab__li--link"
            .user-menu__main__contents__exhibition--tab__li
              = link_to '売却済み', user_menu_path(id: "109", name: "出品した商品-売却済み"), class: "user-menu__main__contents__exhibition--tab__li--link"                         
          .user-menu__main__contents__exhibition__messages
            -# 後々メッセージ数に応じたコンテンツを表示
            = render 'message', code:301    

      //出品した商品-取引中
      - if(@code == '108')      
        .user-menu__main__contents__exhibition
          .user-menu__main__contents__exhibition__title
            出品した商品
          .user-menu__main__contents__exhibition--tab 
            .user-menu__main__contents__exhibition--tab__li
              = link_to '出品中', user_menu_path(id: "107", name: "出品した商品-出品中"), class: "user-menu__main__contents__exhibition--tab__li--link"
            .user-menu__main__contents__exhibition--tab__li.selected
              取引中
            .user-menu__main__contents__exhibition--tab__li
              = link_to '売却済み', user_menu_path(id: "109", name: "出品した商品-売却済み"), class: "user-menu__main__contents__exhibition--tab__li--link"           
          .user-menu__main__contents__exhibition__messages
            -# 後々メッセージ数に応じたコンテンツを表示
            = render 'message', code:301

      //出品した商品-売却済み
      - if(@code == '109')       
        .user-menu__main__contents__exhibition
          .user-menu__main__contents__exhibition__title
            出品した商品
          .user-menu__main__contents__exhibition--tab 
            .user-menu__main__contents__exhibition--tab__li
              = link_to '出品中', user_menu_path(id: "107", name: "出品した商品-出品中"), class: "user-menu__main__contents__exhibition--tab__li--link"
            .user-menu__main__contents__exhibition--tab__li
              = link_to '取引中', user_menu_path(id: "108", name: "出品した商品-取引中"), class: "user-menu__main__contents__exhibition--tab__li--link"
            .user-menu__main__contents__exhibition--tab__li.selected
              売却済み            
          .user-menu__main__contents__exhibition__messages
            -# 後々メッセージ数に応じたコンテンツを表示
            = render 'message', code:301  

      //購入した商品-取引中
      - if(@code == '110')      
        .user-menu__main__contents__purchase
          .user-menu__main__contents__purchase__title
            購入した商品
          .user-menu__main__contents__purchase--tab 
            .user-menu__main__contents__purchase--tab__li.selected
              取引中
            .user-menu__main__contents__purchase--tab__li
              = link_to '過去の取引', user_menu_path(id: "111", name: "購入した商品-過去の取引"), class: "user-menu__main__contents__purchase--tab__li--link"
          .user-menu__main__contents__purchase__messages
            -# 後々メッセージ数に応じたコンテンツを表示
            = render 'message', code:301     
      
      //購入した商品-取引中
      - if(@code == '111') 
        .user-menu__main__contents__purchase.active
          .user-menu__main__contents__purchase__title
            購入した商品
          .user-menu__main__contents__purchase--tab 
            .user-menu__main__contents__purchase--tab__li
              = link_to '取引中', user_menu_path(id: "110", name: "購入した商品-取引中"), class: "user-menu__main__contents__purchase--tab__li--link"
            .user-menu__main__contents__purchase--tab__li.selected
              過去の取引
          .user-menu__main__contents__purchase__messages
            -# 後々メッセージ数に応じたコンテンツを表示
            = render 'message', code:301  

-# フッター部分
= render 'templates/download-footer' 

