.user-products__items
  .user-products__items__title
    = product.name
  .user-products__items__box
    - if user_signed_in? && current_user.id == product.user_id
      .user-products__items__box__edit
        =link_to "編集", "#", class: "user-products__items__box__edit__btn"
      .user-products__items__box__destroy
        =link_to "削除", product_path(product.id), method: :delete, class: "user-products__items__box__destroy__btn"
