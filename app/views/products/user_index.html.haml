= render 'templates/search-header', categories: @categories

.user-menu
  .user-menu__level
    %span 
      = link_to 'フリマ', root_path 
    %span 
      ＞ 
    - case @code
    - when '101'
      %span マイページ
    - else 
      = link_to 'マイページ', user_menu_path(id: "101",  name: "マイページ")
      %span 
        = " ＞ #{@name}"

  .user-menu__main

    -# ユーザーメニューのサイドバー
    = render 'templates/usermenu-sidebar'

    -# ユーザーメニューのコンテンツ部分
    .user-menu__main__contents
      .user-products__title 出品中商品一覧
      = render partial: 'templates/user-products', collection: @products, as: "product"