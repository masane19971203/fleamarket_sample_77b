.simple-header
  =render 'templates/logo-header'
.account__sign-up__page
  .signup__main
    .signup__main--white
      .signup__main--white__top
        %h1
          会員情報入力
      .signup__main--white__main
        =form_with model: @user, url: user_registration_path, local: true, class: 'products-new__contents__form' do |f|
          -# deviseを導入したらrenderのコメントアウトを外してね
          -# = render "devise/shared/error_messages", resource: resource
          .signup__main--white__main--member
            .field
              .field__label
                %h2
                  ニックネーム
                %i 必須
                %br
              =f.text_field :nickname, autofocus: true, placeholder:" 例)フリマ太郎", class:"input__default"
            .field
              .field__label
                %h2 メールアドレス
                %i 必須
                %br/
              = f.email_field :email, autocomplete: "email", placeholder:" PC・携帯どちらでも可", class:"input__default"
            .field
              .field__label
                %h2 パスワード
                %i 必須
                %span (7文字以上)
                %br/
              = f.password_field :password, autocomplete: "off", placeholder:" 7文字以上の半角英数字", class:"input__default__password"
              %br
              %span.class__note ※英字と数字の両方を含めて設定してください
            .field
              .field__label
                %h2 パスワード(確認)
                %i 必須
                %br
              =f.password_field :password_confimation, autocomplete: "off", placeholder:" パスワード確認用", class:"input__default__password"
              %br
              %span.class_note ※英字と数字の両方を含めて設定してください
          .signup__main--white__main--personal
            %h3 本人確認
            %p 
              安心・安全にご利用いただくために、お客さまの本人
              %br
              情報の登録にご協力ください。他のお客さまに公開さ
              %br
              れることはありません。
              %br
            .field
              .field__label
                %h2 お名前
                %i 必須
                %br
              =f.text_field :last_name, placeholder:" 例)山田", class:"input__default"
              =f.text_field :first_name, placeholder:" 例)彩", class:"input__default"
            .field
              .field__label
                %h2 お名前カナ(全角)
                %i 必須
                %br
              =f.text_field :last_name_kana, placeholder:" 例)ヤマダ", class:"input__default"
              =f.text_field :first_name_kana, placeholder:" 例)アヤ", class:"input__default"
            .field
              .field__label
                %h2 生年月日
                %i 必須
                %br
              != sprintf(f.date_select(:dob, prefix:'user',with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
              %br
              %span.class__note 
                ※本人情報は正しく入力してください。会員登録後、
                %br
                修正するにはお時間を頂く場合がございます。
            .actions
              = f.submit "次へ進む", class:"next-btn"
    .simple-footer
      =render 'templates/logo-footer'
